doctype html
style.
  .score-board {
  text-align: center;
  padding: 25px;
  }
  .player {
  display: inline-block;
  padding: 15px;
  }
  .player h4 {
  font-weight: bold;
  }
  .score-box {
  border: 3px solid black;
  padding: 30px;
  color: #2CB3C9;
  }
.score-board
  #1.player
    h4 Player 1
    .score-box
      | #{p1_score}
  #2.player
    h4 Player 2
    .score-box
      | #{p2_score}
